{% extends 'base.html.twig' %}

{% block body %}
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <br>
        <h2 class="display-4">Fiche employé</h2>
        <hr>
        <p class="lead">Détail de la fiche employé {{ user.nom }} {{ user.prenom }}.</p>
        <br>
    </div>
</div>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
        </tr>
        <tr>
            <th>Password</th>
            <td>{{ user.password }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ user.nom }}</td>
        </tr>
        <tr>
            <th>Prenom</th>
            <td>{{ user.prenom }}</td>
        </tr>
        <tr>
            <th>Photo</th>
            <td><img class="w-50" src="{{ asset('images/' ~ user.photo) }}"
                    alt="photo {{ user.prenom }} {{ user.nom }}"></td>
        </tr>
        <tr>
            <th>Depart</th>
            <td>{{ user.depart ? user.depart|date('Y-m-d') : '' }}</td>
        </tr>
    </tbody>
</table>

<a class="btn btn-warning" href="{{ path('user_index') }}">Retour à la liste</a>

<a class="btn btn-warning" href="{{ path('user_edit', {'id': user.id}) }}">Editer</a>

{{ include('user/_delete_form.html.twig') }}
{% endblock %}